<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DynamoDbApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DynamoDbApp"
    xmlns:login="clr-namespace:DynamoDbApp.UI.Views.Login"
    xmlns:register="clr-namespace:DynamoDbApp.UI.Views.Register"
    Shell.FlyoutBehavior="Disabled">


    <ShellContent
        ContentTemplate="{DataTemplate login:LoginPage}"
        Route="LoginPage" 
        />

    <ShellContent
        ContentTemplate="{DataTemplate register:RegisterPage}"
        Route="RegisterPage" 
        />


</Shell>
